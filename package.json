{
  "name": "infra-verify-js",
  "version": "0.1.0",
  "description": "Verification SDK for Infra DID and Verifiable Credentials",
  "main": "lib/index.js",
  "module": "lib/index.esm.js",
  "umd:main": "lib/index.umd.js",
  "source": "src/index.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/InfraBlockchain/infra-verify-js.git"
  },
  "files": [
    "lib",
    "src"
  ],
  "author": "Ace Shim <ace@infrablockchain.com>",
  "license": "ISC",
  "scripts": {
    "test": "jest",
    "test:ci": "jest -u --coverage",
    "build:js": "microbundle",
    "build": "npm run build:js",
    "prepare": "npm run build",
    "release": "semantic-release --debug"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!**/node_modules/**"
    ],
    "testEnvironment": "node"
  },
  "bugs": {
    "url": "https://github.com/InfraBlockchain/infra-verify-js/issues"
  },
  "homepage": "https://github.com/InfraBlockchain/infra-verify-js#readme",
  "devDependencies": {
    "@types/jest": "26.0.19",
    "@types/node": "^14.14.31",
    "codecov": "3.8.1",
    "did-jwt-vc": "^2.1.0",
    "did-resolver": "^3.1.0",
    "infra-did-resolver": "^0.3.2",
    "jest": "26.6.3",
    "microbundle": "0.12.4",
    "prettier": "2.2.1",
    "ts-jest": "26.4.4",
    "ts-lint": "4.5.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-eslint-rules": "5.4.0",
    "typescript": "4.1.3"
  },
  "dependencies": {
    "infra-did-js": "^0.4.2"
  }
}
